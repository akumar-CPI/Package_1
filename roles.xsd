<?xml version="1.0"?>
<cpilint>
	<rules>
	
	<disallowed-sender-adpater>
		<disallow>ftp</disallow>
	</disallowed-sender-adpater>
	
	<matching-process-direct-channels-required/>

    
    <iflow-description-required/>
	
	<naming>
		<scheme>
			<not>
				<regx>Content Modifier \d+</regx>
			</not>
		</scheme>
		<message>Do not use the default Content Modifier step name</message>
		<applt-to>content-modifier.name</applt-to>
		
	</naming>
	
	<allowed-mapping-type>
		<allow>message-mapping</allow>
	</allowed-mapping-type>
	
	<unencrypted-data-write-not-allowed/>
	
    </rules>
</cpilint>